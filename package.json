{
  "name": "vector-wave-kolegium",
  "version": "1.0.0",
  "description": "Vector Wave AI Kolegium - CrewAI based editorial system with React UI",
  "scripts": {
    "dev": "concurrently \"npm run backend:api\" \"npm run frontend:dev\"",
    "dev:full": "concurrently \"npm run backend:dev\" \"npm run backend:api\" \"npm run frontend:dev\"",
    "backend:dev": "source ./venv/bin/activate && cd ai_kolegium_redakcyjne && crewai run",
    "backend:api": "./scripts/run-backend-api.sh",
    "backend:install": "source ./venv/bin/activate && pip install -r requirements.txt",
    "backend:setup": "./scripts/setup-backend.sh",
    "frontend:dev": "cd vector-wave-ui && npm run dev",
    "frontend:install": "cd vector-wave-ui && npm install",
    "frontend:build": "cd vector-wave-ui && npm run build",
    "crew:run": "source ./venv/bin/activate && cd ai_kolegium_redakcyjne && crewai run",
    "crew:train": "source ./venv/bin/activate && cd ai_kolegium_redakcyjne && crewai train 5",
    "crew:test": "source ./venv/bin/activate && cd ai_kolegium_redakcyjne && crewai test 3",
    "flow:run": "source ./venv/bin/activate && cd ai_publishing_cycle && python src/ai_publishing_cycle/main.py",
    "flow:plot": "source ./venv/bin/activate && cd ai_publishing_cycle && python -c \"from src.ai_publishing_cycle.main import plot; plot()\"",
    "install": "npm run backend:install && npm run frontend:install",
    "setup": "npm run backend:setup && npm run frontend:install",
    "start": "npm run dev",
    "test": "npm run crew:test"
  },
  "keywords": [
    "ai",
    "editorial",
    "crewai",
    "react",
    "vector-wave",
    "automation"
  ],
  "author": "Vector Wave Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
